<p style="color: green"><%= notice %></p>

<h1>損益一覧</h1>

<table border="1">
  <thead>
    <tr>
      <th>順位</th>
      <th>コード</th>
      <th>企業名</th>
      <th>取引</th>   
      <th>損益額</th>
    </tr>
    </thead>

<% if @son_ekis != nil %>
  <div id="son_ekis">
    <% i = 0 %>
    <% @son_ekis.each do |son_eki| %>
        <% i = i + 1 %>
        <tr>
          <td><%= i %></td>
          <td><%= son_eki.code %></td>
          <td><%= son_eki.meigara %></td>
          <td><%= son_eki.torihiki %></td>
          <td><%= son_eki.kingaku %></td>
        </tr>
    <% end %>
  </div>      
<% end %>


</table>

